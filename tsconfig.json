{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@openzeppelin/contracts/*": ["node_modules/@openzeppelin/contracts/*"]
    },
    "types": [
      "@types/node",
      "@types/chai",
      "@types/mocha",
      "@nomicfoundation/hardhat-chai-matchers",
      "@nomicfoundation/hardhat-ethers"
    ]
  },
  "include": [
    "./test/**/*.ts",
    "./scripts/**/*.ts",
    "./typechain-types/**/*",
    "./hardhat.config.ts"
  ],
  "exclude": [
    "frontend/**/*",
    "backend/**/*",
    "node_modules/**/*",
    "artifacts/**/*",
    "cache/**/*"
  ]
}